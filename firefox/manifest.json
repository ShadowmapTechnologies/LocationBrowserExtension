{
  "manifest_version": 2,
  "name": "Shadowmap Location",
  "version": "1.1.0",

  "description": "Open the current location from Shadowmap in Google Maps and vice versa.",

  "icons": {
    "32": "icons/icon-32.png"
  },

  "permissions": ["activeTab"],

  "browser_action": {
    "default_icon": "icons/icon-32.png",
    "default_title": "Shadowmap"
  },

  "background": {
    "scripts": ["background.js"]
  }
}
